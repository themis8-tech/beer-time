{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Mot de passe oublié</h1>

    {% if message %}
        <p>
            {{ message }}
        </p>
    {% else %}
        <form method="post">
            <label for="emailField">Veuillez saisir votre adresse e-mail</label>
            <input type="email" name="email" placeholder="E-mail" id="emailField" class="form-control my-4">
            <button type="submit" class="btn btn-primary mb-4">M'envoyer un lien de réinitialisation</button>
        </form>
    {% endif %}
</div>
{% endblock %}
